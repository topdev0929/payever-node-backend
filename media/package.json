{
  "version": "1.0.0",
  "license": "UNLICENSED",
  "repository": "ssh://git@gitlab.devpayever.com:10022/nodejs-backend/media.git",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "cli": "ts-node -r tsconfig-paths/register src/cli.ts",
    "cli:prod": "node dist/src/cli.js",
    "consume:prod": "node dist/src/consumer.js --queue=async_events_media_micro",
    "consumer": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/src/consumer.js --queue=async_events_media_micro\"",
    "encoder:prod": "node dist/src/consumer.js --queue=async_events_media_encoder_micro",
    "encoder": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/src/consumer.js --queue=async_events_media_encoder_micro\"",
    "upload-requests": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/src/consumer.js --queue=async_events_media_upload_requests_micro\"",
    "upload-requests:prod": "node dist/src/consumer.js --queue=async_events_media_upload_requests_micro",
    "http": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/src/http.js\"",
    "http:prod": "node dist/src/http.js",
    "lint": "pe-lint -c tslint.js",
    "probe-mongo": "pe-probe-mongo",
    "test:artillery": "ts-node -r tsconfig-paths/register ./tests/artillery/run.ts",
    "test:cov": "nyc mocha -r ts-node/register --recursive ./tests/unit/**/*.spec.ts",
    "test:e2e": "./node_modules/.bin/cucumber-js",
    "test:pact": "rm -rf -f pacts/ && mocha -r ts-node/register --recursive ./tests/contract/consumer/**/*.pact.spec.ts --exit",
    "test:pact:can-i-deploy": "./node_modules/.bin/pact-broker can-i-deploy --pacticipant nodejs-backend-media --latest",
    "test:pact:publish": "ts-node -r tsconfig-paths/register tests/contract/publish.ts",
    "test:pact:verify": "mocha -r ts-node/register ./tests/contract/provider.spec.ts --timeout 60000 --exit",
    "test:unit": "mocha -r ts-node/register --recursive ./tests/unit/**/*.spec.ts"
  },
  "dependencies": {
    "@fastify/multipart": "^6.0.0",
    "@pe/business-kit": "^2.0.0",
    "@pe/media-sdk": "^2.3.3",
    "@pe/migration-kit": "^3.0.0",
    "@pe/nest-kit": "^11.3.1",
    "@types/clamscan": "^2.0.2",
    "@types/fluent-ffmpeg": "^2.1.14",
    "azure-storage": "^2.10.3",
    "clamscan": "^2.1.2",
    "detect-csv": "^1.1.0",
    "detect-svg": "^0.9.1",
    "dompurify": "^2.4.1",
    "error-callsites": "^2.0.4",
    "fluent-ffmpeg": "^2.1.2",
    "imagemin": "^7.0.1",
    "imagemin-jpegtran": "^6.0.0",
    "imagemin-pngquant": "^8.0.0",
    "is-stream": "^2.0.1",
    "jsdom": "^19.0.0",
    "mime-kind": "^3.0.0",
    "mime-types": "^2.1.33",
    "node-cron": "^2.0.3",
    "randomstring": "^1.2.2",
    "sharp": "^0.31.2"
  },
  "devDependencies": {
    "@pe/artillery-kit": "^3.3.0",
    "@pe/cucumber-sdk": "^6.12.6",
    "@pe/dev-kit": "^3.0.3",
    "@pe/pact-kit": "^3.0.3",
    "@types/busboy": "^0.2.3"
  }
}
