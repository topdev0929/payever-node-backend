{
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:typings": "ts-node --project tsconfig.json generate-graphql-typings.ts",
    "cli": "ts-node src/cli.ts",
    "cli:prod": "node dist/src/cli.js",
    "consumer:prod": "node dist/src/consumer.js",
    "consumer": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/src/consumer.js -- --queue=async_events_products_micro\"",
    "dynamic-consumer:prod": "node dist/src/dynamic-consumer.js",
    "dynamic-consumer": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/src/dynamic-consumer.js -- --queue=async_events_products_micro\"",
    "consumer:rpc": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/src/consumer.js -- --queue=async_events_products_rpc\"",
    "consumer:folder": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/src/consumer.js -- --queue=async_events_products_folders_micro\"",
    "http": "tsc-watch -p tsconfig.build.json --onSuccess \"node --trace-warnings dist/src/http.js\"",
    "http:prod": "node dist/src/http.js",
    "lint": "pe-lint -c ./tslint.js",
    "migrations": "./node_modules/.bin/db-migrate",
    "migrations:prod": "db-migrate --migrations-dir=dist/migrations",
    "probe-mongo": "pe-probe-mongo",
    "test:cov": "nyc mocha --recursive ./src/**/*.spec.ts",
    "test:e2e": "node -v && nyc --include '**/*.controller.ts' --check-coverage true ./node_modules/.bin/cucumber-js",
    "test:pact": "rm -rf -f pacts/ && mocha -r ts-node/register --recursive ./tests/contract/**/*.spec.pact.ts --exit",
    "test:pact:can-i-deploy": "./node_modules/.bin/pact-broker can-i-deploy --pacticipant $APP_NAME --latest --broker-base-url $PACT_BROKER_URL --broker-username $PACT_BROKER_USERNAME --broker-password $PACT_BROKER_PASSWORD",
    "test:pact:publish": "ts-node -r tsconfig-paths/register ./tests/contract/pact.publish.ts",
    "test:pact:verify": "mocha -r ts-node/register ./tests/contract/verify.ts --timeout 60000 --exit",
    "test:unit": "mocha -r ts-node/register --recursive './tests/unit/**/*.spec.ts'",
    "test:artillery": "ts-node -r tsconfig-paths/register ./tests/artillery/run.ts",
    "ws": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/src/ws.js\"",
    "ws:prod": "node dist/src/ws.js"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.15.0",
    "@pe/business-kit": "^2.1.2",
    "@pe/common-sdk": "^5.0.0",
    "@pe/elastic-kit": "^5.0.1",
    "@pe/folders-plugin": "^19.1.0",
    "@pe/graphql-kit": "^5.0.0",
    "@pe/media-sdk": "*",
    "@pe/migration-kit": "^2.0.0",
    "@pe/nest-kit": "^11.1.0",
    "@pe/notifications-sdk": "*",
    "@pe/products-sdk": "1.0.1",
    "@pe/rules-sdk": "^4.0.1",
    "@yastech/mongoose-unique-validator": "^2.0.7",
    "adm-zip": "^0.5.10",
    "convert-units": "^2.3.4",
    "fastify-formbody": "^3.1.0",
    "file-type": "^16.5.3",
    "form-data": "^2.5.1",
    "mongoose-beautiful-unique-validation": "^7.1.1",
    "mongoose-unique-validator": "^2.0.3",
    "sanitize-html": "^2.5.1",
    "websocket": "^1.0.34"
  },
  "devDependencies": {
    "@pe/artillery-kit": "^3.3.0",
    "@pe/cucumber-sdk": "^6.11.5",
    "@pe/dev-kit": "^3.0.3",
    "@pe/pact-kit": "^4.1.0",
    "@types/sanitize-html": "^2.3.2",
    "prettier": "^1.18.2",
    "qs": "^6.9.1",
    "typescript": "^4.8.4"
  },
  "graphdoc": {
    "endpoint": "http://localhost:3000/products",
    "output": "./doc/products"
  }
}
