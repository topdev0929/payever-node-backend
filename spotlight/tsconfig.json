{
    "compilerOptions": {
        "baseUrl": "./",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2019",
        "sourceMap": true,
        "allowJs": true,
        "outDir": "./dist"
    },
    "include": [
        "features/*",
        "src/**/*.ts",
        "migrations/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "dist/**/*",
        "trash"
    ]
}
