{
  "license": "UNLICENSED",
  "repository": "ssh://git@gitlab.devpayever.com:10022/nodejs-backend/checkout.git",
  "description": "Checkout microservice",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "cli": "ts-node src/cli.ts",
    "cli:prod": "node dist/src/cli.js",
    "consume:prod": "node dist/src/consumer.js",
    "consumer": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/src/consumer.js\"",
    "cron": "ts-node src/cron.ts",
    "cron:prod": "node dist/src/cron.js",
    "http": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/src/http.js\"",
    "http:prod": "node dist/src/http.js",
    "lint": "pe-lint",
    "migrations": "./node_modules/.bin/db-migrate",
    "migrations:prod": "db-migrate --migrations-dir=dist/migrations",
    "probe-mongo": "pe-probe-mongo",
    "test:cov": "nyc mocha -r ts-node/register --recursive ./tests/**/*.spec.ts",
    "test:e2e": "nyc --include '**/*.controller.ts' --check-coverage true ./node_modules/.bin/cucumber-js",
    "test:coverage": "nyc --reporter @pe/cucumber-sdk/module/lcov --include '*' ./node_modules/.bin/cucumber-js",
    "test:pact": " rm -rf -f pacts/ && mocha -r ts-node/register --recursive ./tests/contract/consumer/**/*.pact.spec.ts --exit",
    "test:pact:can-i-deploy": "./node_modules/.bin/pact-broker can-i-deploy --pacticipant nodejs-backend-third-party --latest",
    "test:pact:publish": "ts-node -r tsconfig-paths/register ./tests/contract/publish.ts",
    "test:pact:verify": "mocha -r ts-node/register ./tests/contract/provider.spec.ts --timeout 60000 --exit",
    "test:unit": "mocha -r ts-node/register --recursive ./tests/unit/**/*.spec.ts",
    "test:artillery": "ts-node -r tsconfig-paths/register ./tests/artillery/run.ts"
  },
  "dependencies": {
    "@googlemaps/google-maps-services-js": "^3.3.37",
    "@pe/business-kit": "^2.1.0",
    "@pe/common-sdk": "^5.6.0",
    "@pe/cron-kit": "^2.0.0",
    "@pe/elastic-kit": "^5.0.1",
    "@pe/folders-plugin": "^19.1.1",
    "@pe/media-sdk": "^2.3.0",
    "@pe/migration-kit": "^2.0.0",
    "@pe/nest-kit": "^11.3.1",
    "@pe/notifications-sdk": "^6.0.0",
    "@pe/translations-sdk": "^2.1.1",
    "cookie": "^0.4.0",
    "date-fns": "^2.29.3",
    "fastify-cookie": "*",
    "fastify-multipart": "*",
    "multiparty": "^4.2.1",
    "node-cron": "^2.0.3",
    "qrcode": "^1.5.0",
    "qs": "^6.11.2",
    "xml2json": "^0.11.2"
  },
  "nyc": {
    "functions": 80,
    "lines": 85
  },
  "devDependencies": {
    "@pe/artillery-kit": "^3.4.0",
    "@pe/cucumber-sdk": "^6.11.5",
    "@pe/dev-kit": "^3.0.5",
    "@pe/pact-kit": "^4.0.0"
  }
}
