{
  "license": "UNLICENSED",
  "repository": "ssh://git@gitlab.devpayever.com:10022/builder/backend/builder-application.git",
  "description": "builder application microservice ",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "cli": "ts-node src/cli.ts",
    "cli:prod": "node dist/src/cli.js",
    "consumer:prod": "node --expose-gc --max-old-space-size=8192 dist/src/consumer.js",
    "consumer": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/src/consumer.js\"",
    "cron": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/src/cron.js\"",
    "cron:prod": "node --expose-gc --max-old-space-size=3072 dist/src/cron.js",
    "http": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/src/http.js\"",
    "http:prod": "node dist/src/http.js",
    "lint": "pe-lint",
    "probe-mongo": "pe-probe-mongo",
    "test:cov": "nyc mocha -r ts-node/register --recursive ./tests/unit/**/*.spec.ts",
    "test:e2e": "nyc --include '**/*.controller.ts' --check-coverage true ./node_modules/.bin/cucumber-js",
    "test:coverage": "nyc --reporter @pe/cucumber-sdk/module/lcov --include '*' ./node_modules/.bin/cucumber-js",
    "test:artillery": "ts-node -r tsconfig-paths/register ./tests/artillery/run.ts",
    "test:unit": "mocha -r ts-node/register --recursive ./tests/unit/**/*.spec.ts",
    "migrations": "./node_modules/.bin/db-migrate",
    "migrations:prod": "db-migrate --migrations-dir=dist/migrations",
    "ws": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/src/ws.js\"",
    "ws:prod": "node dist/src/ws.js",
    "test:pact": "mocha -r ts-node/register --recursive ./tests/contract/consumer/**.spec.ts --exit",
    "test:pact:can-i-deploy": "./node_modules/.bin/pact-broker can-i-deploy --pacticipant 'nodejs-backend-transactions' --latest --broker-base-url $PACT_BROKER_BASE_URL --broker-username $PACT_BROKER_USERNAME --broker-password $PACT_BROKER_PASSWORD",
    "test:pact:publish": "ts-node -r tsconfig-paths/register ./tests/contract/publish.ts",
    "test:pact:verify": "mocha -r ts-node/register ./tests/contract/provider.spec.ts --timeout 60000 --exit"
  },
  "dependencies": {
    "@fastify/etag": "^4.1.0",
    "@pe/builder-core": "5.10.87",
    "@pe/builder-kit": "^12.18.2",
    "@pe/business-kit": "^2.1.1",
    "@pe/cron-kit": "*",
    "@pe/migration-kit": "^2.0.0",
    "@pe/nest-kit": "^11.3.1",
    "artillery-engine-meteor": "^1.0.1",
    "compression": "^1.7.4",
    "dotenv": "^16.0.3",
    "file-type": "^15.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "form-data": "^4.0.0",
    "imagemin": "^7.0.1",
    "imagemin-pngquant": "^9.0.1",
    "imagemin-svgo": "^8.0.0",
    "jimp": "^0.16.1",
    "lodash": "^4.17.21",
    "mkdirp": "^1.0.4",
    "mongodb": "^4.1.3",
    "qs": "^6.7.0",
    "randomstring": "^1.2.1",
    "rimraf": "^3.0.2",
    "rxjs": "~6.5.5",
    "tslint": "^6.1.3"
  },
  "devDependencies": {
    "@pe/artillery-kit": "^4.1.0",
    "@pe/cucumber-sdk": "^6.12.6",
    "@pe/dev-kit": "^3.0.5",
    "@pe/pact-kit": "^4.1.1-beta.2"
  }
}
