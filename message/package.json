{
  "name": "@pe/message",
  "version": "0.0.1",
  "description": "messaging service",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "cli": "ts-node src/cli.ts",
    "cli:prod": "node dist/src/cli.js",
    "consumer": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/src/consumer.js -- --queue=async_events_message_micro\"",
    "consumer:folder": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/src/consumer.js -- --queue=async_events_message_folders_micro\"",
    "consumer:prod": "node dist/src/consumer.js",
    "http": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/src/http.js\"",
    "http:prod": "node dist/src/http.js",
    "lint": "pe-lint",
    "probe-mongo": "pe-probe-mongo",
    "prews": "copyfiles -V -u -f src/static/* dist/src/static",
    "ws": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/src/ws.js\"",
    "test:artillery": "ts-node -r tsconfig-paths/register ./tests/artillery/run.ts",
    "ws:prod": "node dist/src/ws.js",
    "test:e2e": "nyc --include '**/*.controller.ts' --check-coverage true ./node_modules/.bin/cucumber-js",
    "test:integration": "",
    "test:unit": "mocha -r ts-node/register --recursive ./tests/unit/**/*.spec.ts",
    "test:coverage": "nyc --reporter @pe/cucumber-sdk/module/lcov --include '*' ./node_modules/.bin/cucumber-js",
    "test:pact": "mocha -r ts-node/register --recursive ./tests/contract/consumer/**.spec.ts --exit",
    "test:pact:can-i-deploy": "./node_modules/.bin/pact-broker can-i-deploy --pacticipant 'nodejs-backend-transactions' --latest --broker-base-url $PACT_BROKER_BASE_URL --broker-username $PACT_BROKER_USERNAME --broker-password $PACT_BROKER_PASSWORD",
    "test:pact:publish": "ts-node -r tsconfig-paths/register ./tests/contract/publish.ts",
    "test:pact:verify": "mocha -r ts-node/register ./tests/contract/provider.spec.ts --timeout 600000 --exit"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@gitlab.devpayever.com:10022/nodejs-backend/message.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nestjs/platform-socket.io": "^7.6.18",
    "@nestjs/platform-ws": "^7.6.18",
    "@pe/artillery-engine-socketio-v2": "^1.0.2-pe.2",
    "@pe/artillery-kit": "^4.0.2",
    "@pe/builder-theme-kit": "^6.1.6",
    "@pe/business-kit": "^2.1.0",
    "@pe/channels-sdk": "^10.5.0",
    "@pe/common-sdk": "^5.0.0",
    "@pe/elastic-kit": "^5.1.0",
    "@pe/folders-plugin": "^19.0.13",
    "@pe/message-kit": "^12.3.1",
    "@pe/migration-kit": "^2.0.0",
    "@pe/nest-kit": "^11.1.0",
    "@pe/rules-sdk": "^3.0.0",
    "@pe/stomp-client": "^1.3.0",
    "fastify-static": "^4.0.1",
    "qs": "^6.7.0",
    "randomstring": "^1.2.1",
    "socket.io-emitter": "^3.2.0",
    "socket.io-redis": "^5.4.0",
    "socketio-jwt": "^4.6.2"
  },
  "devDependencies": {
    "@pe/cucumber-sdk": "^6.11.5",
    "@pe/dev-kit": "^3.0.5",
    "@pe/pact-kit": "^3.0.3",
    "@types/node": "^18.11.15",
    "@types/randomstring": "^1.1.6",
    "@types/redis": "^2.8.28",
    "@types/socket.io": "^2.1.13",
    "@types/socket.io-client": "^1.4.36",
    "@types/ws": "^7.4.0",
    "copyfiles": "^2.4.1"
  },
  "nyc": {
    "functions": 80,
    "lines": 80
  }
}
