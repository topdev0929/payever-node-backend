{
    "compilerOptions": {
      "baseUrl": "./",
      "module": "commonjs",
      "declaration": true,
      "noImplicitAny": true,
      "removeComments": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es2017",
      "sourceMap": true,
      "allowJs": true,
      "outDir": "./dist",
      "types": ["node", "mongoose"],
      "skipLibCheck": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts", "dist/**/*"]
  }
